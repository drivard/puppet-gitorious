#!/bin/bash
# Execute those commands to create the Database and the default root password
/usr/bin/mysqladmin -u root --host='<%= server -%>' password '<%= pwd -%>';
/usr/bin/mysql -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "CREATE USER 'git'@'%' IDENTIFIED BY '<%= git_pwd -%>';";
/usr/bin/mysql -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "CREATE DATABASE gitorious_production CHARACTER SET utf8 COLLATE utf8_general_ci;";
/usr/bin/mysql -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "GRANT ALL ON gitorious_production.* TO 'git'@'%';";
/usr/bin/mysql -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "flush privileges;";