#!/bin/bash
MYSQLADMIN_BIN=`which mysqladmin)`;
MYSQL_BIN=`which mysql`;
# Execute those commands to create the Database and the default root password
$MYSQLADMIN_BIN -u root --host='<%= server -%>' password '<%= pwd -%>';
$MYSQL_BIN -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "CREATE USER 'git'@'%' IDENTIFIED BY '<%= git_pwd -%>';";
$MYSQL_BIN -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "CREATE DATABASE gitorious_production CHARACTER SET utf8 COLLATE utf8_general_ci;";
$MYSQL_BIN -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "GRANT ALL ON gitorious_production.* TO 'git'@'%';";
$MYSQL_BIN -u root --host='<%= server -%>' --password='<%= pwd -%>' -e "flush privileges;";